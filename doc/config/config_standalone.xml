#config_standalone

...

<datasourdes>

	...
	<datasource jta="true" jndi-name="java:jboss/datasources/GradBookDS" pool-name="GradBookDS" enabled="true" use-java-context="true">
		<connection-url>jdbc:postgresql://localhost:5432/GradBook</connection-url>
		<driver>postgresql</driver>
		<transaction-isolation>TRANSACTION_READ_COMMITTED</transaction-isolation>
		<pool>
			<min-pool-size>5</min-pool-size>
			<max-pool-size>10</max-pool-size>
		</pool>
		<security>
			<user-name>postgres</user-name>
			<password>root</password>
		</security>
		<validation>
			<check-valid-connection-sql>SELECT 1</check-valid-connection-sql>
			<validate-on-match>false</validate-on-match>
			<background-validation>false</background-validation>
		</validation>
		<statement>
			<track-statements>true</track-statements>
			<share-prepared-statements>false</share-prepared-statements>
		</statement>
	</datasource>
	....
</datasources>
...


....
<drivers>
	....
	<driver name="postgresql" module="org.postgresql">
		<xa-datasource-class>org.postgresql.xa.PGXADataSource</xa-datasource-class>
	</driver>
	.....
</drivers>


.....
<security-domains>

	....

	<security-domain name="GradBookRealm" cache-type="default">
		<authentication>
			<login-module code="Database" flag="required">
				<module-option name="dsJndiName" value="java:jboss/datasources/GradBookDS"/>
				<module-option name="rolesQuery" value="SELECT role, 'Roles' FROM gradbook.users WHERE username=?"/>
                <!--module-option name="hashAlgorithm" value="MD5"/>
                <module-option name="hashEncoding" value="hex"/-->
                <module-option name="principalsQuery" value="SELECT password from gradbook.users WHERE username=?"/>
                </login-module>
        </authentication>
        <authorization>
            <policy-module code="Database" flag="required">
            	<module-option name="dsJndiName" value="java:jboss/datasources/GradBookDS"/>
            	<module-option name="rolesQuery" value="SELECT role, 'Roles' FROM gradbook.users WHERE username=?"/>
            	<!--module-option name="hashAlgorithm" value="MD5"/>
            	<module-option name="hashEncoding" value="hex"/-->
            	<module-option name="principalsQuery" value="SELECT password from gradbook.users WHERE username=?"/>
            </policy-module>
        </authorization>
    </security-domain>
    ...
</security-domains>